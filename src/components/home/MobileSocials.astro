---
const socials = [
  {
    name: 'Instagram',
    url: 'https://www.instagram.com/pablofergus/',
    icon: 'fa fa-instagram',
  },
  {
    name: 'Twitter',
    url: 'https://www.twitter.com/pablofergus',
    icon: 'fa fa-twitter',
  },
  { name: 'eMail', url: 'mailto:pablofergus@gmail.com', icon: 'fa fa-at' },
];
---

<section class='md:hidden'>
  <h2 class='hidden'>Socials section</h2>
  <ul class='flex justify-between'>
    {
      socials.map((item) => (
        <li class='bg-white px-4 py-2 text-red border-black border-2 rounded card-shadow'>
          <a href={item.url} target='_blank' title={`Go to ${item.name}`}>
            <div class:list={[item.icon, 'p-6']} />
          </a>
        </li>
      ))
    }
  </ul>
</section>
