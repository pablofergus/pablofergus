---
import Layout from '@layouts/Default.astro';
import RecentWorks from '@components/generic/RecentWorks.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'Recording', url: 'works/tags/tags.engineering' },
  { name: 'Editing', url: 'works/tags/tags.engineering' },
  { name: 'Mixing', url: 'works/tags/tags.mix' },
  { name: 'Mastering', url: 'works/tags/tags.mastering' },
  { name: 'Production', url: 'works/tags/tags.production' },
  { name: 'Musical Direction', url: 'works/tags/tags.md' },
  { name: 'Synths', url: 'works/tags/tags.synths' },
];
---

<Layout
  title='Home'
  pageTitle='Pablo Fergus | Home'
  description='Pablo Fergus.'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>About Pablo Fergus</h2>
      <div class='col-span-3'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-4xl lg:text-6xl'>
              About
            </p>
            <p class='mt-2 outfit text-l md:text-3l lg:text-5l'>
              I am Pablo Fergus, a Madrid-based producer, keyboard player, and mixer. <br/>
              My credits include producing for Amaral, Alcalá Norte, Pol Granch and Sexy Zebras, and playing live as MD with Dani Fernández.
            </p>
            <Button target={'_self'} href='works/'>
              Check out my credits &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-3'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 righteous'>
            Services
          </h2>
          <p class='mt-2 outfit text-l md:text-3l lg:text-5l'>
            The services I offer include:
          </p>
          <ul class='mt-2 flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <a
                    class='sanchez'
                    href={item.url}
                    title={`Go to ${item.name}`}
                  >
                    <Pill>{item.name}</Pill>
                  </a>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <!-- <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 sanchez'>
            Musical Direction
          </h2>
          <!-- <p class='poppins'>
            Brutal is a theme built with Astro, UnoCSS by <a
              href='https://www.elian.codes/'>Elian</a
            >. It's a simple, fast, and modern theme that is easy to use and
            customize. Mainly meant to power blogs and personal websites.
          </p> 
        </Card>
      </div> -->
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Contact
          </h2>
          <p class='poppins'>
            You can contact me on any social network, or sending an email to <a
              href='mailto:pablofergus@gmail.com'>pablofergus@gmail.com</a
            >.
          </p>
        </Card>
      </div>
    </section>
    <RecentWorks />
  </main>
</Layout>
