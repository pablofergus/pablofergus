---
import { Card } from '@eliancodes/brutal-ui';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  author: string;
  workUrl: string;
  imgSrc: ImageMetadata;
  imgAlt: string;
  description: string;
}

const { title, author, workUrl, imgAlt, imgSrc } = Astro.props;
---

<Card color='white'>
  <h3 class='poppins text-lg md:text-xl'><span style="font-weight:bold;">{title}</span> - {author}</h3>
  <div class='rounded-lg border-3 border-black my-4 h-100' style="height:100%; ">
    <a href={workUrl} target="_blank">
      <Image
        src={imgSrc}
        alt={imgAlt}
        width={373}
        height={373}
        class='rounded h-full w-full object-cover'
      />
    </a>
  </div>
  <!-- <p class='poppins'>{description}</p> -->
  <slot />
</Card>
