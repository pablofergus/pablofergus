---
import Layout from '@layouts/Default.astro';
import RecentWorks from '@components/generic/RecentWorks.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'Grabación', url: 'works/tags/tags.engineering' },
  { name: 'Edición', url: 'works/tags/tags.engineering/' },
  { name: 'Mezcla', url: 'works/tags/tags.mix' },
  { name: 'Mastering', url: 'works/tags/tags.mastering' },
  { name: 'Producción', url: 'works/tags/tags.production' },
  { name: 'Dirección musical', url: 'works/tags/tags.md' },
  { name: 'Sintetizadores', url: 'works/tags/tags.synths' },
];
---

<Layout
  title='Inicio'
  pageTitle='Pablo Fergus |Inicio'
  description='Pablo Fergus.'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
      <h2 class='hidden'>Sobre Pablo Fergus</h2>
      <div class='col-span-3'>
        <Card>
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-4xl lg:text-6xl'>
              Sobre mí
            </p>
            <p class='mt-2 outfit text-l md:text-3l lg:text-5l'>
              Soy Pablo Fergus, un productor, teclista, y mixer en Madrid. <br />
              Mis créditos incluyen haber producido para Amaral, Alcalá Norte, Pol Granch y Sexy Zebras, además de tocar en directo como director musical con Dani Fernández.
            </p>
            <Button target={'_self'} href='/works/'>
              Mis créditos &rarr;
            </Button>
          </div>
        </Card>
      </div>
      <div class='col-span-3'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-8 righteous'>
            Servicios
          </h2>
          <p class='mt-2 outfit text-l md:text-3l lg:text-5l'>
            Los servicios que ofrezco son:
          </p>
          <ul class='mt-2 flex gap-4 flex-wrap'>
            {
              builtWith.map((item) => (
                <li>
                  <a
                    class='sanchez'
                    href={item.url}
                    title={`Go to ${item.name}`}
                  >
                    <Pill>{item.name}</Pill>
                  </a>
                </li>
              ))
            }
          </ul>
        </Card>
      </div>
      <!-- <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 sanchez'>
            Musical Direction
          </h2>
          <!-- <p class='poppins'>
            Brutal is a theme built with Astro, UnoCSS by <a
              href='https://www.elian.codes/'>Elian</a
            >. It's a simple, fast, and modern theme that is easy to use and
            customize. Mainly meant to power blogs and personal websites.
          </p> 
        </Card>
      </div> -->
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            Contacto
          </h2>
          <p class='poppins'>
            Puedes contactar conmigo en cualquier red social, o mandando un mail a <a
              href='mailto:pablofergus@gmail.com'>pablofergus@gmail.com</a
            >.
          </p>
        </Card>
      </div>
    </section>
    <RecentWorks />
  </main>
</Layout>
