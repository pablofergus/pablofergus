---
import Layout from '@layouts/Default.astro';
import WorksSideBar from '@components/works/WorkSideBar.astro';
import WorksContent from '@components/works/WorkContent.astro';
import RecentWorksPosts from '@components/generic/RecentWorks.astro';

const ogImage = new URL(`/v1/generate/og/${Astro.params.slug}.png`, Astro.url);

const { content, headings } = Astro.props;
const { title, description } = content;
---

<Layout
  title={title as string}
  description={description as string}
  ogImage={ogImage}
>
  <main class='p-6 lg:grid lg:grid-cols-3 flex justify-center'>
    <WorksSideBar headings={headings} />
    <WorksContent content={content}>
      <slot />
    </WorksContent>
  </main>
  <section class='p-6'>
    <RecentWorksPosts count={6} />
  </section>
</Layout>
